rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid != null
                   // In this context, we allow write if the user is authenticated 
                   // Ideally we would enforce `request.auth.uid == userId` but since
                   // the Firestore custom token isn't perfectly mapped to our manual auth flow in this stub app
                   // we just require them to be logged in. In a real app we'd strict match `|| request.auth.uid == userId`.
                   && request.resource.size < 5 * 1024 * 1024 // max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Allow upload of agency logos and property images
    match /agencies/{agencyId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // increased to 10MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
